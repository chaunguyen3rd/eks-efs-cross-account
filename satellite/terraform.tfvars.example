# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region  = "us-west-2"
aws_profile = "satellite"

# Environment
environment  = "production"
project_name = "banking-platform"

# EKS Configuration
kubernetes_version = "1.27"

# Network Configuration
vpc_cidr        = "10.1.0.0/16"
private_subnets = ["10.1.1.0/24", "10.1.2.0/24", "10.1.3.0/24"]
public_subnets  = ["10.1.101.0/24", "10.1.102.0/24", "10.1.103.0/24"]

# Corebank Account Configuration
corebank_account_id           = "987654321098"  # Replace with actual corebank account ID
corebank_vpc_cidr            = "10.0.0.0/16"
corebank_peering_connection_id = "pcx-xxxxxxxxx" # Replace with actual peering connection ID from corebank deployment
corebank_efs_id              = "fs-xxxxxxxxx"   # Replace with actual EFS ID from corebank deployment
